using System;
using System.Collections.Generic;
using System.Globalization;
using System.IO;
using System.Linq;

class Car
{
    public string Make { get; set; }
    public string Model { get; set; }
    public int Year { get; set; }
    public string Color { get; set; }
}

public class CarDatabase
{
    public List<Car> Cars { get; set;}

    public CarDatabase()
    {
        Cars = new List<Car>();
    }

    public void SaveToFile(string filePath)
    {
        var doc = new XDocument();
        using (var writer = doc.CreateWriter())
        {
            var serializer = new XmlSerializer(typeof(CarDatabase));
            serializer.Serialize(writer, this);
        }
        doc.Save(filePath);
    }

    public static CarDatabase LoadFromFile(string filePath)
    {
        var serializer = new XmlSerializer(typeof(CarDatabase));
        using (var fs = new FileStream(filePath, FileMode.Open))
        {
            return (CarDatabase)serializer.Deserialize(fs);
        }
    }

    static void DisplayAllCars()
    {
        string filePath = @"C:\Users\Hostilian\OneDrive\Documents\GitHub\SimpleCarShorter\data xlsx";
        CarDatabase carDatabase;

        if (File.Exists(filePath))
        {
            carDatabase = CarDatabase.LoadFromFile(filePath);
        }
        else
        {
            carDatabase = new CarDatabase();
        }

        // Implement the menu and user interactions here
        // You can add options to display data, search, filter, calculate statistics, add/delete cars, etc.

        // After any changes, save the database back to the file
        carDatabase.SaveToFile(filePath);
    }
}